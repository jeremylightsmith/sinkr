- throw_content(:for_header) do
  = css_include_tag 'events'
  = js_include_tag 'events'

%h1 Events

.flickr
  %h2 Flickr
  .actions
    = link_to "refresh events", "/services/load/flickr"
    = link_to_function "refresh all photos", "$('.month .flickr a[text=refresh]').click()"

.iphoto
  %h2 iPhoto
  .actions
    = link_to "refresh", "/services/load/iphoto"

- @events_by_month_by_year.keys.sort.reverse.each do |year|
  .year{:id => year}
    %h3= year
    - @events_by_month_by_year[year].keys.sort.reverse.each do |month|
      .month{:id => month}
        %h4= display_month(month)
        .flickr
          - @events_by_month_by_year[year][month].find_all{|e| e.is_a? FlickrEvent}.each do |event|
            .event{:id => "event_#{event.id}"}
              = partial 'event', :with => event
        .iphoto
          - @events_by_month_by_year[year][month].find_all{|e| e.is_a? IphotoEvent}.each do |event|
            .event{:id => "event_#{event.id}"}
              = partial 'event', :with => event
